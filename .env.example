# DeepHat Model Configuration
DEEPHAT_MODEL_NAME=DeepHat/DeepHat-V1-7B
DEEPHAT_MODEL_PATH=./models/deephat-v1-7b  # Local path if downloaded
DEEPHAT_DEVICE=auto  # auto, cuda, cpu
DEEPHAT_TORCH_DTYPE=auto  # auto, float16, bfloat16

# Hugging Face Configuration
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=./cache/huggingface

# NVIDIA NIM Configuration (Optional fallback)
NIM_API_KEY=your_nim_api_key_here
NIM_BASE_URL=https://integrate.api.nvidia.com/v1

# OpenAI Configuration (Optional for evaluation)
OPENAI_API_KEY=your_openai_api_key_here

# Repository Analysis Configuration
MAX_REPO_SIZE_MB=500
MAX_FILE_SIZE_KB=100
ANALYSIS_TIMEOUT_SECONDS=300
CONCURRENT_ANALYSIS_LIMIT=4

# Security Scanner Configuration
SEMGREP_RULES_PATH=./data/semgrep_rules
BANDIT_CONFIG_PATH=./configs/bandit.yml
ENABLE_EXTERNAL_SCANNERS=true

# Output Configuration
REPORTS_OUTPUT_DIR=./data/reports
TEMP_REPOS_DIR=./data/repositories
LOG_LEVEL=INFO
ENABLE_PROFILING=true

# Evaluation Configuration
EVAL_OUTPUT_DIR=./.tmp/nat/evaluation
EVAL_DATASET_PATH=./data/evaluation/benchmark_dataset.json
ENABLE_ACCURACY_EVAL=true
ENABLE_PERFORMANCE_PROFILING=true

# Advanced Configuration
ENABLE_DEPENDENCY_ANALYSIS=true
ENABLE_ZERO_DAY_DETECTION=true
VULNERABILITY_CONFIDENCE_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=32768  # Tokens for DeepHat model
